<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screen.GioiThieu">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:text="Phần Mềm Quản Lý Khách Hàng Cắt Tóc Phiên Bản 1.0"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/colorItemClick"
        android:background="@drawable/shape_bg_bovien_color_xanh"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        />

        <ImageView
            android:src="@drawable/ic_cattoc_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"/>
        <Button
            android:id="@+id/btn_donggioithieu"
            android:background="@drawable/shape_bg_bovien_color_xanh"
            android:textColor="@color/colorItemClick"
            android:text="Đóng"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
