<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/xam"
    android:layout_height="match_parent"
    tools:context=".screen.ThemKhachHangActivity">

    <LinearLayout
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Tên"
                android:textColor="@color/den"
                android:textSize="17sp"
                />
            <EditText
                android:id="@+id/edtTenKhachHang"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="@color/den"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:hint="Nguyễn Văn ............."
                android:background="@drawable/botron_edittext"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Ngày Sinh"
                android:textColor="@color/den"
                android:textSize="17sp"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:padding="3dp"
                    android:src="@drawable/calendar" />
                <EditText
                    android:id="@+id/edtNgaySinhKhachHang"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/den"
                    android:textSize="20sp"
                    android:hint="14/07/1996"
                    android:inputType="date"
                    android:background="@drawable/botron_edittext"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Số điện thoại"
                android:textColor="@color/den"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/edtSdtKhachHang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@color/den"
                android:textSize="20sp"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:hint="0328xxxxxx"
                android:background="@drawable/botron_edittext"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Địa Chỉ"
                android:textColor="@color/den"
                android:textSize="17sp"
                />
            <EditText
                android:id="@+id/edtDiaChiKhachHang"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="@color/den"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:hint="106 Hoàng Quốc Việt"
                android:background="@drawable/botron_edittext"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Giới tính"
                android:textColor="@color/den"
                android:textSize="17sp"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:background="@drawable/bg_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txvNam"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Nam"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/vang"
                    android:background="@color/den"/>

                <TextView
                    android:id="@+id/txvNu"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:text="Nữ"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/den"
                    android:background="@color/trang"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Ghi chú"
                android:textColor="@color/den"
                android:textSize="17sp"
                />
            <EditText
                android:id="@+id/edtMoTaKhachHang"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:gravity="center"
                android:textColor="@color/den"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:hint="Mô Tả Thêm ........"
                android:background="@drawable/botron_edittext"></EditText>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txvHuyBo"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="HỦY BỎ"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorItemClick"
            android:background="@drawable/shape_bg_bovien_color_xanh"/>

        <TextView
            android:id="@+id/txvthemOrSua"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_bovien_color_xanh"
            android:gravity="center"
            android:text="THÊM"
            android:textColor="@color/colorItemClick"
            android:textSize="20sp"
             />
    </LinearLayout>
</RelativeLayout>