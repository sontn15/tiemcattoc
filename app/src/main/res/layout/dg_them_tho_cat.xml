<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="THÊM THỢ CẮT TÓC"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="@color/colorItemClick"
        android:background="@drawable/shape_bg_bovien_color_xanh"
        android:paddingLeft="5dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center"
        android:background="@color/black_mo_2"
        >
        <EditText
            android:id="@+id/edtTenThoCatToc"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/botron_edittext"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="20sp"
            android:gravity="center"
            android:hint="Tên Thợ Cắt"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txvHuyBoThemThoCatToc"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_bovien_color_xanh"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="HỦY BỎ"
            android:textColor="@color/trang"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txvThemThoCatToc"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_bovien_color_xanh"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="THÊM"
            android:textColor="@color/colorItemClick"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>