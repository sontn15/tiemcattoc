<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <TextView
        android:id="@+id/txvTenKhachHang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="80dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/trang"
        android:background="@drawable/shape_bg_bovien_color_xanh"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txvGtKhachHang"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:textColor="@color/trang"
        android:textStyle="bold"
        android:text="Nam"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimaryDark"
        android:textSize="20sp"/>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Ngày Sinh :"
                android:textColor="@color/den"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txvNgaySinhKhachHang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/shape_bg_bovien_xam_trang_edit_text"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:text="10/10/2021"
                android:textColor="@color/den"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Số Điện Thoại :"
                android:textColor="@color/den"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txvSdtKhachHang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/shape_bg_bovien_xam_trang_edit_text"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:text="10971...."
                android:textColor="@color/den"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Số Lần Cắt :"
                android:textColor="@color/den"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txvSoLanCatKhachHang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/shape_bg_bovien_xam_trang_edit_text"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:text="0"
                android:textColor="@color/den"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>